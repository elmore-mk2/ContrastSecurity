<h4><%= l(:config_section_connect) %></h4>
<table>
  <tbody>
    <tr>
      <th align="left"><%= l(:teamserver_url) %></th>
      <td><%= text_field_tag('settings[teamserver_url]', @settings['teamserver_url'], {size:"50"})%></td>
    </tr>
    <tr>
      <th align="left"><%= l(:org_id) %></th>
      <td><%= text_field_tag('settings[org_id]', @settings['org_id'], {size:"50"})%></td>
    </tr>
    <tr>
      <th align="left"><%= l(:api_key) %></th>
      <td><%= text_field_tag('settings[api_key]', @settings['api_key'], {size:"50"})%></td>
    </tr>
    <tr>
      <th align="left"><%= l(:auth_header) %></th>
      <td><%= text_field_tag('settings[auth_header]', @settings['auth_header'], {size:"100"})%></td>
    </tr>
  </tbody>
</table>
<br />
<h4><%= l(:config_section_import) %></h4>
