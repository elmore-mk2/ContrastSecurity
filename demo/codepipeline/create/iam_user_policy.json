{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:PutRolePolicy",
                "iam:PassRole",
                "iam:AttachRolePolicy",
                "logs:CreateLogGroup",
                "codebuild:CreateProject",
                "codedeploy:CreateApplication",
                "codedeploy:CreateDeploymentGroup",
                "codepipeline:CreatePipeline",
                "codepipeline:StartPipelineExecution"
            ],
            "Resource": "*"
        }
    ]
}
